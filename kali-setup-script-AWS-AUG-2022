	git clone https://github.com/notnotnotveg/nuclei-custom-templates
	cd ..
	mkdir nuclei-22
	cd nuclei-22
	git clone https://github.com/obreinx/nuceli-templates
	cd ..
	mkdir nuclei-23
	cd nuclei-23
	git clone https://github.com/Odayex/Random-Nuclei-Templates

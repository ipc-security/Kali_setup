	# Run from root directory
	cd /root

	# Update Repositories
	printf '\n============================================================\n'
	printf  '=========Update/Kali-Everything/Update/Upgrade\n'
	printf '============================================================\n\n'
	apt update -y
	apt upgrade -y
	
	# Install Desktop/RDP
	printf '\n============================================================\n'
	printf  '=========Install Desktop/RDP\n'
	printf '============================================================\n\n'
	sudo apt -y install kali-desktop-xfce xrdp
	sudo systemctl enable xrdp
	sudo systemctl restart xrdp
	
	# Install scripts with apt install
	printf '\n============================================================\n'
	printf  '=========Install scripts with apt install\n'
	printf '============================================================\n\n'
	apt install \
    	python3-virtualenv \
    	python3-dev \
    	python3-pip \
    	zmap \
    	htop \
    	zip \
    	terminator \
    	virtualenv \
    	python3-venv \
    	python3-shodan \
    	python3-censys \
    	jq \
    	sublist3r \
    	parallel \
	ruby \
	docker-compose
	
	# Install scripts with pip
	printf '\n============================================================\n'
	printf  '=========Install scripts with pip\n'
	printf  '============================================================\n\n'
	pip install poetry
	pip install pipreqs
	pip3 install arjun
	python3 -m pip install lsassy
	python3 -m pip install pipenv
	python3 -m pip install apachetomcatscanner
	
	# Git cloning repos
	printf '\n============================================================\n'
	printf  '=========Git cloning repos\n'
	printf  '============================================================\n\n'
